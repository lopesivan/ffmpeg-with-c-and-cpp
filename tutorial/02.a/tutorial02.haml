%makefile
  %include{:file=>"presets/simple.bkl"}/

  - includes = [ "./include" ]

  %exe{:id       => "tutorial02",
       :template => "simple"}

    /
      GNUmakefile
    %if{ :cond => "FORMAT=='gnu'"}
      %ldflags
        `pkg-config --libs libavformat libavcodec libswscale libavutil sdl`
      %cflags
        `pkg-config --cflags libavformat libavcodec libswscale libavutil sdl`

    /
      Sources Files:

    - sources = Dir.glob("src/*.c")
    %sources
      - sources.each do |src|
        =src

    - includes.each do |inc|
      %include
        =inc

    /
      Headers Files:

    - headers = Dir.glob("include/*.h")
    %headers
      - headers.each do |inc|
        =inc
