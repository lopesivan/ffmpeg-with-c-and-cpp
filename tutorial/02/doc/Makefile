EXT       = .pdf .epub
LANG      = pt-br
#LANG      = en
DOCNAME   = unite.design

MARKDOWNS = $(LANG)/layout/login-01.md

##############################################################################
##############################################################################
##############################################################################
DOCS      = $(DOCNAME).pdf $(DOCNAME).epub
# ----------------------------------------------------------------------------

all: docs

# md -> pdf
$(DOCNAME).pdf:
	@cat $(LANG)/title.txt $(MARKDOWNS) | sed "s=__DATE__=$(DATE)=" | pandoc -s -o $@

# md -> epub
$(DOCNAME).epub:
	@cat $(LANG)/title.txt $(MARKDOWNS) | sed "s=__DATE__=$(DATE)=" | pandoc -s -o $@

#
# ============================================================================
#

docs: $(DOCS)

show:
	@evince *.pdf &
#
# ============================================================================
#

# ----------------------------------------------------------------------------
# ----------------------------------------------------------------------------
# ----------------------------------------------------------------------------

clean:
	-rm -rf $(DOCS)

# END OF FILE
